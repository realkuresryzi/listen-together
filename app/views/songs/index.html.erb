<div>
  <%= link_to "Return to Main page", root_path %>
</div>

<h1>Songs</h1>

<div id="songs">
  <% @songs.each do |song| %>
    <% if song.dj == Current.user.email %>
      <%= render song %>
      <p>
        <%= link_to "Show this song", song %>
      </p>
    <% end %>
  <% end %>
</div>

<%= link_to "New song", new_song_path %>

