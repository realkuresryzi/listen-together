<p style="color: green; margin: 1em 3em;"><%= notice %></p>
<p style="color: red; margin: 1em 3em;"><%= alert %></p>

<div class="welcome_button purple_text" onclick="window.location.href='<%= guest_login_path %>'">
  <%= link_to "Continue as guest", "#", style: "color: inherit; text-decoration: none;" %>
</div>

<div class="light-heading">
  <h1>Sign in as DJ</h1>
</div>

<div class="additional-content">
  <%= form_with(url: sign_in_path) do |form| %>
    <div class="general-input">
      <%= form.label :email, style: "display: block" %>
      <%= form.email_field :email, value: params[:email_hint], required: true, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="general-input">
      <%= form.label :password, style: "display: block" %>
      <%= form.password_field :password, required: true, autocomplete: "current-password" %>
    </div>

    <div class="general-input">
      <%= button_to guest_login_path, method: :post, style: "padding: 1em; background-color: #4CAF50; color: white; text-decoration: none; display: inline-block; font-size: 16px; margin: 4px 2px; cursor: pointer;" do %>
        <i class="fa-solid fa-right-to-bracket"></i>
      <% end %>
    </div>
  <% end %>

  <div class="additional-options">
    <%= link_to "Sign up", sign_up_path, style: "color: #e2e2e2; text-decoration: underline;" %>
    <%= link_to "Forgot your password?", new_identity_password_reset_path, style: "color: #e2e2e2; text-decoration: underline;" %>
  </div>
</div>
